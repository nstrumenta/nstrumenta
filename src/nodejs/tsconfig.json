{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "rootDir": "..",
    "outDir": "../../dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/__tests__/**/*"
  ]
}