{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [5999, 9229],
  "portsAttributes": {
    "5999": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "9229": {
      "label": "Node Debugger",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "CircleCI.circleci",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "hashicorp.terraform",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "GitHub.vscode-pull-request-github"
      ]
    }
  },
  "runArgs": [
    "--privileged",
    "--env-file",
    "./credentials/local.env",
    "-p",
    "5999:5999"
  ]
}