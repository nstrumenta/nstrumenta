{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "dom",
      "ES2020"
    ],
    "declaration": true,
    "outDir": "../dist/browser-esm",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "**/*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": ["../**/__tests__/**"]
}