{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://nstrumenta.com/module.schema.json",
    "title": "Module",
    "description": "An Nstrumenta module",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "Type of module",
            "enum": [
                "algorithm",
                "nodejs",
                "sandbox"
            ]
        },
        "name": {
            "type": "string",
            "description": "Module name"
        },
        "entry": {
            "type": "string",
            "description": "Entry point of the script, relative to cwd"
        },
        "version": {
            "type": "string",
            "description": "Module version"
        },
        "excludes": {
            "description": "List of string patterns to exclude from packaging module for publish (e.g., node_modules likely always)",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "publish": {
            "description": "optional pre-publish step",
            "type": "object",
            "properties": {
                "build": {
                    "type": "string",
                    "description": "build command"
                },
                "path": {
                    "type": "string",
                    "description": "location of folder to publish, e.g., destination of output from build command"
                }
            }
        }
    },
    "required": [
        "type",
        "name",
        "version"
    ]
}