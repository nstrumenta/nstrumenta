{
  "name": "nodejs-client",
  "version": "1.0.0",
  "description": "nodejs client tests",
  "main": "index.js",
  "scripts": {
    "test-from-docker-compose": "npx wait-on $NSTRUMENTA_API_URL && echo 'wait-on $NSTRUMENTA_API_URL complete' && jest --verbose=true --detectOpenHandles",
    "test": "jest --detectOpenHandles",
    "test-from-launch-with-dotenv": "dotenv -e $ENVFILE -- bash -c 'npm run test'",
    "test-from-launch-with-dotenv:web": "dotenv -e $ENVFILE -- bash -c 'npm run test -- -t web'"
  },
  "author": "Tyler Bryant",
  "license": "UNLICENSED",
  "dependencies": {
    "wait-on": "^6.0.1",
    "zx": "^6.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "dotenv-cli": "^7.2.1",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4"
  }
}
